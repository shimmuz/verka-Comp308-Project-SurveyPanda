<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %></title>
  <!-- CSS SECTION -->
  <link rel="stylesheet" href="../../../assets/scripts/bootstrap/dist/css/bootstrap.min.css">
  <!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css"> -->
  <link rel="stylesheet" href="../../../assets/scripts/bootstrap/dist/css/bootstrap-theme.min.css">
  <link rel="stylesheet" href="../../../assets/scripts/font-awesome/css/font-awesome.min.css">
  <!-- <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
    integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous"> -->

  <link rel='stylesheet' href='../../../assets/css/app.css' />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/css/materialize.min.css">
  <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>
  <link
    href="//cdn.rawgit.com/Eonasdan/bootstrap-datetimepicker/e8bddc60e73c1ec2475f827be36e1957af72e2ea/build/css/bootstrap-datetimepicker.css"
    rel="stylesheet">
</head>

<body>
  <div id="navbar">
    <a href="/" id="logo">Survey Panda</a>
    <div id="navbar-right">
      <% if(title == "Home") { %>
      <a href="/" class="active">
        <i class="material-icons vertical-align-middle padding-bottom-3">home</i> Home
      </a>
      <% } else { %>
      <a href="/"> <i class="material-icons vertical-align-middle padding-bottom-3">home</i> Home</a>
      <% } %>
      <% if(typeof displayName == 'string' && displayName) { %>
      <% if(title == "My Surveys List") { %>
      <a href="/surveys/mySurveys" class="active">
        <i class="material-icons vertical-align-middle padding-bottom-3">speaker_notes</i> Survey List
      </a>
      <% } else { %>
      <a href="/surveys/mySurveys">
        <i class="material-icons vertical-align-middle padding-bottom-3">speaker_notes</i> Survey List</a>
      <% } %>
      <% } %>

      <% if(typeof displayName == 'string' && displayName) { %>
      <% if(title == "Create Survey") { %>
      <a href="/surveys/initial" class="active">
        <i class="material-icons vertical-align-middle padding-bottom-3">playlist_add</i> Create
      </a>
      <% } else { %>
      <a href="/surveys/initial">
        <i class="material-icons vertical-align-middle padding-bottom-3">playlist_add</i> Create</a>
      <% } %>
      <% } %>

      <% if(title == "Surveys List") { %>
      <a href="/surveys" class="active">
        <i class="material-icons vertical-align-middle padding-bottom-3">question_answer</i> Respond
      </a>
      <% } else { %>
      <a href="/surveys">
        <i class="material-icons vertical-align-middle padding-bottom-3">question_answer</i> Respond</a>
      <% } %>

      <% if(typeof displayName == 'string' && displayName) { %>
      <% if(title == "User Profile") { %>
      <a href="../users/profile" class="active">
        <i class="material-icons vertical-align-middle padding-bottom-3">local_library</i> Welcome,
        <%= displayName %></a>
      <% } else { %>
      <a href="../users/profile">
        <i class="material-icons vertical-align-middle padding-bottom-3">local_library</i> Welcome,
        <%= displayName %></a>
      <% } %>
      <a href="/users/logout">
        <i class="material-icons vertical-align-middle padding-bottom-3">error</i> Logout</a>
      <% } else { %>
      <% if(title == "Login") { %>
      <a href="/users/login" class="active">
        <i class="material-icons vertical-align-middle padding-bottom-3">launch</i> Login</a>

      <% } else { %>
      <a href="/users/login">
        <i class="material-icons vertical-align-middle padding-bottom-3">launch</i> Login</a>
      <% } %>
      <% } %>
    </div>
  </div>

  <script>
    window.onscroll = function () {
      scrollFunction()
    };

    function scrollFunction() {
      if (document.body.scrollTop > 80 || document.documentElement.scrollTop > 80) {
        document.getElementById("navbar").style.padding = "10px 10px";
        document.getElementById("logo").style.fontSize = "25px";
      } else {
        document.getElementById("navbar").style.padding = "50px 10px";
        document.getElementById("logo").style.fontSize = "35px";
      }
    }
  </script>