<% include ../partials/header.ejs %>

<main class="container">
  <div class="row ">
    <div class="col m12 m7">
      <div class="card hoverable">
        <div class="card-image">
          <img src="../../assets/images/loginim.jpg">
          <span class="card-title">Register</span>
        </div>
        <div class="card-content">
          <div class="row">
            <form class="col m12 form-horizontal" method="post" role="form">
              <div class="row ">
                <div class="input-field col m6 form-group ">
                  <i class="material-icons prefix">account_circle</i>
                  <input id="username" type="text" class="form-control" name="username" required autofocus>
                  <label for="username">*User Name</label>
                </div>
                <div class="input-field col m6 form-group">
                  <i class="material-icons prefix">mail</i>
                  <input id="email" type="email" class="form-control" name="email" required>
                  <label for="email">*Email</label>
                </div>
                <div class="input-field col m6 form-group">
                  <i class="material-icons prefix">lock</i>
                  <input id="password" type="password" class="form-control" name="password" required>
                  <label for="password">*Password</label>
                </div>
                <div class="input-field col m6 form-group">
                  <i class="material-icons prefix">lock</i>
                  <input id="displayName" type="text" class="form-control" name="displayName" required>
                  <label for="displayName">*Display Name</label>
                </div>
              </div>
              <div class="col m2 form-group">
                <button class="btn waves-effect waves-light green" type="submit" value="Log In">Submit</button>
              </div>
              <div class="col m2 form-group">
                <a href="/" class="waves-effect waves-light btn red">Cancel</a>
              </div>
            </form>
          </div>
          <% if (messages.length > 0) { %>
          <div class="alert alert-danger"><%= messages %></div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
  </div>
</main>

<% include ../partials/footer.ejs %>
