<% include ../partials/header.ejs %>

<div style=" size:cover; background-size:cover;background-image:url('../../../assets/images/bg2.jpg');
  background-repeat:no-repeat; width:100%; height:400px; background-attachment:fixed;">
</div>

<main class="container">
  <h2 class="header center-align"> <i
      class="material-icons vertical-align-middle padding-bottom-3 medium">person_pin</i> Update
    Profile</h2>
  <div class="col m12 m7">
    <div class="card horizontal hoverable">
      <div class="card-image">
        <img src="../../../assets/images/up.png" style="width: 500px; height: 500px;">
      </div>
      <div class="card-stacked">
        <div class="card-content">
          <div class="row ">
            <form class="col m12 form-horizontal " method="post">
              <div class="row ">
                <div class="input-field col m12 form-group ">
                  <i class="material-icons prefix">account_circle</i>
                  <input id="username" type="text" class="form-control" value="<%= users.username %>" name="username"
                    readonly>
                  <label for="username">*User Name</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col m12 form-group">
                  <i class="material-icons prefix">mail</i>
                  <input id="email" type="email" class="form-control" name="email" value="<%= users.email %>" required
                    autofocus>
                  <label for="email">*Email</label>
                </div>
              </div>
              <div class="row">
                <div class="input-field col m12 form-group">
                  <i class="material-icons prefix">lock</i>
                  <input id="displayName" type="text" class="form-control" name="displayName"
                    value="<%= users.displayName %>" required>
                  <label for="displayName">*Display Name</label>
                </div>
              </div>
          </div>
          <div class="row center-align">
            <div class="col m2 form-group">
              <button class="btn waves-effect waves-light green" type="submit"> Edit</button>
            </div>
            <div class="col m2 form-group">
              <a href="/" class="waves-effect waves-light btn red ">Cancel</a>
            </div>
          </div>
          </form>
        </div>
        <% if (messages.length > 0) { %>
        <div class="alert alert-danger"><%= messages %></div>
        <% } %>
      </div>
    </div>
  </div>
</main>

<% include ../partials/footer.ejs %>